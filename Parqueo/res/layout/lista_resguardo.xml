<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvNotaListaResguardo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="@string/lista_vacia"
            android:visibility="invisible" />

        <ListView
            android:id="@+id/lvListaResguardo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stackFromBottom="true"
            android:transcriptMode="alwaysScroll" >
        </ListView>
        
        <SlidingDrawer
            android:id="@+id/sdGananciasListaResguardo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:content="@+id/content"
            android:handle="@+id/handle"
            android:visibility="invisible">
	
	        <Button
	            android:id="@+id/handle"
	            android:layout_width="wrap_content"
	            android:layout_height="25dp"
	            android:background="@drawable/custom_button"
	            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
	            android:textColor="@android:color/white"
	            android:text="INGRESOS ECONÃ“MICOS"/>
	
	        <ScrollView
	            android:id="@+id/content"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" >
	            
	            <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:orientation="vertical"
		            android:padding="5dp"
		            android:background="@drawable/custom_imageview_white">
		            
	                <TextView
		                android:id="@+id/tvCuandoListaResguardos"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="Ingresos de hace 3 dias"
		                android:layout_gravity="center_horizontal"
		                android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"/>
		
		            <TextView
		                android:id="@+id/tvIngresosDia"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="Ingresos dia: 0 Bs."
		                android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"/>
		
		            <TextView
		                android:id="@+id/tvIngresosNoche"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="Ingreso noche: 0 Bs."
		                android:textAppearance="?android:attr/textAppearanceSmallPopupMenu" />
		            
		            <TextView
		                android:id="@+id/tvCantidadResguardos"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="Cant. Registros: 0"
		                android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"/>
		
		            <TextView
		                android:id="@+id/tvIngresoTotal"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="Ingreso Total: 0 Bs."
		                android:textAppearance="?android:attr/textAppearanceSmallPopupMenu" />
		        </LinearLayout>
	        </ScrollView>
	    </SlidingDrawer>
    </FrameLayout>
</LinearLayout>
