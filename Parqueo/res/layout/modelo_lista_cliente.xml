<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:layout_marginLeft="10dp">

        <ImageView
            android:id="@+id/ivImageClienteLCliente"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_client"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="@drawable/custom_imageview_white"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            android:gravity="center_vertical"
            android:layout_marginLeft="7dp">

            <TextView
                android:id="@+id/tvCILCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CI: 5684200"
                android:textSize="13dp"
                android:textAppearance="?android:attr/textAppearanceSmallPopupMenu" />

            <TextView
                android:id="@+id/tvNombreLCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre: Androidt"
                android:textSize="13dp"
                android:textAppearance="?android:attr/textAppearanceSmallPopupMenu" />

            <TextView
                android:id="@+id/tvTipoLCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:text="Tipo: Cliente con contrato dia completo"
                android:textAppearance="?android:attr/textAppearanceSmallPopupMenu" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
