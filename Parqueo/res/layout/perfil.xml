<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:padding="5dp">
    
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" 
	    android:padding="5dp">
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" 
	        android:gravity="center_horizontal">
	
	        <ImageView
	            android:id="@+id/ivImageUserPerfil"
	            android:layout_width="90dp"
	            android:layout_height="90dp"
	            android:adjustViewBounds="true"
            	android:scaleType="fitCenter"
	            android:src="@drawable/ic_supervisor_account_white_48dp" 
	            android:background="@drawable/custom_imageview_white"/>
	
	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:orientation="vertical" 
	            android:gravity="center_vertical"
	            android:layout_marginLeft="7dp">
	            
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Usuario"
	                android:textSize="11dp"
	                android:textAppearance="?android:attr/textAppearanceSmallPopupMenu" />
	            
	            <TextView
	                android:id="@+id/tvUsuarioPerfil"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="kiko"
	                android:layout_marginLeft="10dp"
	                android:textAppearance="?android:attr/textAppearanceSmallPopupMenu" />
				
				<TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Carnet de Identidad"
	                android:textSize="11dp"
	                android:textAppearance="?android:attr/textAppearanceSmallPopupMenu" />
	            <TextView
	                android:id="@+id/tvCIPerfil"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="5684210"
	                android:layout_marginLeft="10dp"
	                android:textAppearance="?android:attr/textAppearanceSmallPopupMenu" />
	
	        </LinearLayout>
	
	    </LinearLayout>
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" 
	        android:padding="5dp"
	        android:layout_marginLeft="20dp">
	        
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Nombre"
	            android:textSize="11dp"
	            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu" />
	        
	        <TextView
	            android:id="@+id/tvNombrePerfil"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="William"
	            android:layout_marginLeft="35dp"
	            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu" />
	        
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Apellido"
	            android:textSize="11dp"
	            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu" />
	
	        <TextView
	            android:id="@+id/tvApellidoPerfil"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Walas X."
	            android:layout_marginLeft="35dp"
	            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu" />
			
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Telefono o celular"
	            android:textSize="11dp"
	            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu" />
	        
	        <TextView
	            android:id="@+id/tvCelularPerfil"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="74423433"
	            android:layout_marginLeft="35dp"
	            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu" />
			
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Direccion"
	            android:textSize="11dp"
	            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu" />
	        
	        <TextView
	            android:id="@+id/tvDireccionPerfil"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Antofagasta 549"
	            android:layout_marginLeft="35dp"
	            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu" />
	        
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Correo electronico"
	            android:textSize="11dp"
	            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu" />
	
	        <TextView
	            android:id="@+id/tvEmailPerfil"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="willian@gmail.com"
	            android:layout_marginLeft="35dp"
	            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu" />
	        
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Sexo"
	            android:textSize="11dp"
	            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu" />
	        
	        <TextView
		        android:id="@+id/tvSexoPerfil"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Masculino"
		        android:layout_marginLeft="35dp"
		        android:textAppearance="?android:attr/textAppearanceSmallPopupMenu" />
		
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Fecha de nacimiento"
	            android:textSize="11dp"
	            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu" />
	        
		    <TextView
		        android:id="@+id/tvFechaNacPerfil"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="1 de mayo 2015"
		        android:layout_marginLeft="35dp"
		        android:textAppearance="?android:attr/textAppearanceSmallPopupMenu" />
	
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="7dp"
	        android:orientation="vertical"
	        android:gravity="right|center_vertical">
	        
	        <Button
	            android:id="@+id/btnCambiarClavePerfil"
	            android:layout_width="wrap_content"
	            android:layout_height="35dp"
	            android:text="Cambiar mi clave"
	            android:gravity="right|center"
	            style="?android:attr/buttonStyleSmall"
	            android:textColor="@android:color/white"
	            android:background="@drawable/custom_button"
	            android:drawableEnd="@drawable/ic_lock_white_36dp"/>
	        
	        <LinearLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:layout_marginTop="3dp">
	            
	            <Button
			        android:id="@+id/btnEditarPerfil"
			        android:layout_width="wrap_content"
			        android:layout_height="35dp"
			        android:text="Editar mi perfil" 
			        android:gravity="right|center"
			        android:layout_marginLeft="3dp"
			        style="?android:attr/buttonStyleSmall"
			        android:textColor="@android:color/white"
			        android:background="@drawable/custom_button"
			        android:drawableEnd="@drawable/ic_mode_edit_white_36dp"/>
	
		        <Button
		            android:id="@+id/btnOKPerfil"
		            android:layout_width="wrap_content"
		            android:layout_height="35dp"
		            android:text="@android:string/yes"
		            android:gravity="right|center"
		            android:layout_marginLeft="3dp"
		            style="?android:attr/buttonStyleSmall"
		            android:textColor="@android:color/white"
		            android:background="@drawable/custom_button"
		            android:drawableEnd="@drawable/ic_thumb_up_white_36dp"/>
	        
	        </LinearLayout>
	    </LinearLayout>    
	</LinearLayout>
</ScrollView>
