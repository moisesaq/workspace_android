<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp" >

   <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        
       <LinearLayout 
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center_vertical|center_horizontal">
           
           <ImageView
               android:id="@+id/ivImageVehiculoIngresoVehiculo"
               android:layout_width="80dp"
               android:layout_height="40dp"
               android:src="@drawable/ic_car"
               android:scaleType="centerCrop"
               android:background="@drawable/custom_imageview_white"
               android:visibility="gone"/>
           
           <AutoCompleteTextView 
	            android:id="@+id/actvPlacaIngresoVehiculo"
	            android:layout_width="160dp"
	            android:layout_height="wrap_content"
	            android:scrollbarAlwaysDrawVerticalTrack="true"
	            android:hint="@string/placa"
	            android:maxLength="7"
	            android:inputType="none"
	            android:layout_gravity="center_horizontal">
	            
	            <requestFocus />
	        </AutoCompleteTextView>
       </LinearLayout>
        
       <LinearLayout 
           android:id="@+id/lyPropVehiculoIngresoVehiculo"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:padding="5dp"
           android:visibility="gone">
           
           <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Propietario del VehÃ­culo"
	            android:textSize="12dp"
	            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu" />
           
           <TextView
               	android:id="@+id/tvNombrePropIngresoVehiculo"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Moises Apaza Q."
	            android:textSize="12dp"
	            android:layout_gravity="center_horizontal"
	            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu" />
           
           <TextView
               	android:id="@+id/tvTipoPropIngresoVehiculo"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Cliente con contrato dia completo"
	            android:textSize="12dp"
	            android:layout_gravity="center_horizontal"
	            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu" />
           
       </LinearLayout> 
		
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">
            
            <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Hora de Ingreso:"
	            android:textSize="12dp"
	            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu" />
	
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical|center_horizontal">
                
                <TextView
		            android:id="@+id/tvHoraIngresoVehiculo"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="Hrs. 12:22:00"
		            android:typeface="monospace"
		            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu" />
                
                <ImageView 
                    android:id="@+id/ivDefinirHoraIngresoVehiculo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_alarm_black_24dp"
                    android:background="@drawable/custom_imageview_white"/>
            </LinearLayout>
	        
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="2dp"
	            android:text="Fecha de Ingreso:"
	            android:textSize="12dp"
	            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu" />
	
	        <TextView
	            android:id="@+id/tvFechaIngresoVehiculo"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="21 de abril 2015"
	            android:typeface="monospace"
	            android:layout_gravity="center_horizontal"
	            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu" />
	        
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Nota"
	            android:textSize="12dp"
	            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu" />
	        
	        <EditText
	            android:id="@+id/etNotaIngresoVehiculo"
	            android:layout_width="match_parent"
	            android:layout_height="60dp"
	            android:inputType="textMultiLine" 
	            android:hint="Escriba nota aqui"
	            android:gravity="left|top"
	            android:maxLength="250"/>
        
        </LinearLayout>

        <Button
            android:id="@+id/btnCancelarIngresoVehiculo"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="@android:string/cancel" 
            android:gravity="right|center"
			android:layout_marginTop="5dp"
			style="?android:attr/buttonStyleSmall"
			android:textColor="@android:color/white"
			android:background="@drawable/custom_button"
			android:drawableEnd="@drawable/ic_highlight_remove_white_36dp"/>

        <Button
            android:id="@+id/btnOKIngresoVehiculo"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="@android:string/ok" 
            android:gravity="right|center"
			android:layout_marginTop="5dp"
			style="?android:attr/buttonStyleSmall"
			android:textColor="@android:color/white"
			android:background="@drawable/custom_button"
			android:drawableEnd="@drawable/ic_done_white_36dp"/>
		
    </LinearLayout>
</ScrollView>
