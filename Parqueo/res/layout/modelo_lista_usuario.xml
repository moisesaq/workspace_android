<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ivImageUserLUsuario"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:background="@drawable/custom_imageview_white"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_supervisor_account_white_48dp" />
    
    <TextView
        android:id="@+id/tvEstadoLUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Habilitado"
        android:textSize="13dp" 
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

    

    <TextView
        android:id="@+id/tvUserLUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario: kiko"
        android:layout_toRightOf="@+id/ivImageUserLUsuario"
        android:layout_marginLeft="3dp"
        android:layout_centerInParent="true"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>