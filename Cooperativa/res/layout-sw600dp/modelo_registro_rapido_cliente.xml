<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/tvNotaRegRapidoCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nota registro rapido"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textSize="@dimen/letter_tablet_small"
		android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/etNombreRegRapidoCliente"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_gravity="center_horizontal"
        android:hint="Nombre cliente"
        android:inputType="textCapWords"
        android:maxLength="20" 
        android:textSize="@dimen/letter_tablet_normal"
		android:textAppearance="?android:attr/textAppearanceMedium">
        <requestFocus />
    </EditText>

</LinearLayout>
