<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="3dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" 
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/ivImageClienteLPedido"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/custom_imageview"
            android:padding="3dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_client_128" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre: "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/letter_tablet_small"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvNombreClienteLPedido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Silvia Vargas V."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/letter_tablet_small" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="CI: "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/letter_tablet_small"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvCIClienteLPedido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5544332"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/letter_tablet_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha venta: "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/letter_tablet_small"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvFechaVentaLPedido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17/06/2015"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/letter_tablet_small" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Costo total:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/letter_tablet_small"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvCostoTotalLPedido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300Bs."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/letter_tablet_small" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/FrameLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha entrega: "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/letter_tablet_small"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvFechaEntregaLPedido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17/06/2015"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/letter_tablet_small"
                    android:layout_marginLeft="60pt" />

                <TextView
                    android:id="@+id/tvEstadoLPedido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PENDIENTE"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/letter_tablet_small"
                    android:layout_gravity="right" 
                    android:textColor="@color/ROJO"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
