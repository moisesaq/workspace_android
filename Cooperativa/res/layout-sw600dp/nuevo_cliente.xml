<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        android:padding="5dp"
        android:layout_margin="10dp">
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp">
            
            <ImageView 
                android:id="@+id/ivImagenNuevoCliente"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="fitCenter"
                android:padding="5dp"
                android:src="@drawable/ic_client_128"
                android:background="@drawable/custom_imageview"/>
            
            <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            android:layout_marginLeft="10dp">
	            
                <EditText 
                    android:id="@+id/etCINuevoCliente"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="CI o NIT"
                	android:inputType="number" 
                    android:maxLength="10"
                    android:drawableRight="@drawable/ic_no_value_24"
                    android:padding="10dp"
		            android:layout_marginLeft="10dp"
		            android:layout_marginRight="10dp"
		            android:layout_marginTop="5dp"
		            android:textSize="@dimen/letter_tablet_normal"
					android:textAppearance="?android:attr/textAppearanceMedium">
                	<requestFocus />  
                </EditText>
                
                <EditText 
                    android:id="@+id/etNombreNuevoCliente"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre"
              		android:inputType="textCapWords"
                    android:maxLength="20"
                    android:padding="10dp"
		            android:layout_marginLeft="10dp"
		            android:layout_marginRight="10dp"
		            android:layout_marginTop="5dp"
		            android:textSize="@dimen/letter_tablet_normal"
					android:textAppearance="?android:attr/textAppearanceMedium">
                </EditText>
                
	        </LinearLayout>
            
        </LinearLayout>

        <EditText
            android:id="@+id/etApellidoNuevoCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:hint="Apellido"
            android:maxLength="20"
            android:padding="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/letter_tablet_normal"
			android:textAppearance="?android:attr/textAppearanceMedium"/>

        <EditText
            android:id="@+id/etDireccionNuevoCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DirecciÃ³n"
            android:maxLength="35"
            android:inputType="textPostalAddress"
            android:padding="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/letter_tablet_normal"
			android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/etTelfNuevoCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telf."
            android:maxLength="10"
            android:inputType="phone"
            android:padding="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/letter_tablet_normal"
			android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/etEmailNuevoCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/letter_tablet_normal"
			android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sexo"
	            android:textSize="@dimen/letter_tablet_small"
				android:textAppearance="?android:attr/textAppearanceMedium"/>
            
            <RadioGroup 
	            android:id="@+id/rdgSexoNuevoCliente"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"
	            android:orientation="horizontal"
	            android:layout_marginTop="5dp">
	            
	            <RadioButton
		            android:id="@+id/rdbMasculinoNuevoCliente"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/masculino" 
		            android:textSize="@dimen/letter_tablet_normal"
					android:textAppearance="?android:attr/textAppearanceMedium"/>
	            
	            <RadioButton
		            android:id="@+id/rdbFemeninoNuevoCliente"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/femenino" 
		            android:textSize="@dimen/letter_tablet_normal"
					android:textAppearance="?android:attr/textAppearanceMedium"/>
	            
	        </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de nacimiento"
                android:textSize="@dimen/letter_tablet_small"
				android:textAppearance="?android:attr/textAppearanceMedium" />
            
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical|center">
	            
                <TextView
	                android:id="@+id/tvFechaNacNuevoCliente"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Sin especificar"
	                android:textSize="@dimen/letter_tablet_normal"
					android:textAppearance="?android:attr/textAppearanceMedium" />
	
	            <ImageView
	                android:id="@+id/ivFechaNacNuevoCliente"
	                android:layout_width="50dp"
	                android:layout_height="50dp"
	                android:layout_marginLeft="5dp"
	                android:src="@drawable/ic_event_white_24dp" 
	                android:background="@drawable/custom_view_button"/>
	            
	        </LinearLayout>
	        
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:padding="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de registro"
               	android:textSize="@dimen/letter_tablet_small"
				android:textAppearance="?android:attr/textAppearanceMedium" />
            
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical|center">
	            
                <TextView
	                android:id="@+id/tvFechaRegNuevoCliente"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Fecha de registro"
	                android:textSize="@dimen/letter_tablet_normal"
					android:textAppearance="?android:attr/textAppearanceMedium" />
	
	            <ImageView
	                android:id="@+id/ivFechaRegNuevoCliente"
	                android:layout_width="50dp"
	                android:layout_height="50dp"
	                android:layout_marginLeft="5dp"
	                android:src="@drawable/ic_event_white_24dp" 
	                android:background="@drawable/custom_view_button"/>
            
	        </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnAceptarNuevoCliente"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/aceptar" 
            android:layout_marginTop="5dp"
            android:textColor="@android:color/black"
            android:background="@drawable/custom_view_button"
            android:padding="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="@dimen/letter_tablet_normal"
			android:textAppearance="?android:attr/textAppearanceMedium"/>

    </LinearLayout>
</ScrollView>
