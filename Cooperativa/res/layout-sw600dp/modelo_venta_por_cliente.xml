<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:padding="3dp">

       <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|center_horizontal">
        
            <ImageView
                android:id="@+id/ivImagenClienteVentaPorCliente"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/custom_imageview"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_person_white_48dp" 
                android:visibility="gone"/>
            
            <LinearLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            android:gravity="center_vertical"
	            android:layout_marginLeft="5dp">
	            
	            <AutoCompleteTextView
		            android:id="@+id/actvCIClienteVentaPorCliente"
		            android:layout_width="350dp"
		            android:layout_height="wrap_content"
		            android:hint="Carnet de Identidad"
		            android:inputType="number"
		            android:maxLength="10"
		            android:textSize="@dimen/letter_tablet_normal"
		            android:textAppearance="?android:attr/textAppearanceMedium"/>
	            
	            <TextView 
	                android:id="@+id/tvNombreClienteVentaPorCliente"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Nombre: Silvia Vargas"
	                android:visibility="gone"
	                android:textSize="@dimen/letter_tablet_small"
		            android:textAppearance="?android:attr/textAppearanceMedium"/>
        	</LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:gravity="right|center_vertical"
            android:layout_marginTop="3dp">

            <Button
                android:id="@+id/btnCancelarVentaPorCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancelar" 
                android:textColor="@android:color/black"
                android:background="@drawable/custom_view_button"
                android:layout_marginRight="3dp"
                android:padding="15dp"
                android:textSize="@dimen/letter_tablet_small"
		        android:textAppearance="?android:attr/textAppearanceMedium"/>

            <Button
                android:id="@+id/btnAceptarVentaPorCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/aceptar" 
                android:enabled="false"
                android:textColor="@android:color/black"
                android:background="@drawable/custom_view_button"
                android:padding="15dp"
                android:textSize="@dimen/letter_tablet_small"
		        android:textAppearance="?android:attr/textAppearanceMedium"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
