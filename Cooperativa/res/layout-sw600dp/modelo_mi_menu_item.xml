<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/imageMiMenu"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_ocupation_128" 
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@drawable/custom_imageview"/>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical">
        
        <TextView
	        android:id="@+id/titleMiMenu"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Opciones"
	        android:textStyle="bold"
	        android:textColor="@android:color/background_dark"
	        android:textSize="@dimen/letter_tablet_normal"
			android:textAppearance="?android:attr/textAppearanceMedium"/>
        
        <TextView
	        android:id="@+id/descriptionMiMenu"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Descripcion"
	        android:textColor="@color/GRIS_FUERTE"
	        android:textSize="@dimen/letter_tablet_small"
			android:textAppearance="?android:attr/textAppearanceMedium"/>
        
    </LinearLayout>

    

</LinearLayout>
