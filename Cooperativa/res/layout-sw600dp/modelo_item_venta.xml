<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">

        <ImageView
            android:id="@+id/ivImageClienteLVenta"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/custom_imageview"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_client_128"
            android:padding="3dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Nombre: "
                    android:textSize="@dimen/letter_tablet_small"
		            android:textAppearance="?android:attr/textAppearanceMedium" />
                
                <TextView
                    android:id="@+id/tvNombreClienteLVenta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Silvia Vargas V."
                    android:textSize="@dimen/letter_tablet_small"
		            android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:text="CI: " 
                    android:textSize="@dimen/letter_tablet_small"
		            android:textAppearance="?android:attr/textAppearanceMedium"/>
                
                <TextView
                    android:id="@+id/tvCIClienteLVenta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5544332" 
                    android:textSize="@dimen/letter_tablet_small"
		            android:textAppearance="?android:attr/textAppearanceMedium"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"                
                    android:text="Fecha venta: " 
                    android:textSize="@dimen/letter_tablet_small"
		            android:textAppearance="?android:attr/textAppearanceMedium"/>

                <TextView
                    android:id="@+id/tvFechaVentaLVenta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"                  
                    android:text="17/06/2015" 
                    android:textSize="@dimen/letter_tablet_small"
		            android:textAppearance="?android:attr/textAppearanceMedium"/>
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:text="Costo total:" 
                    android:textSize="@dimen/letter_tablet_small"
		            android:textAppearance="?android:attr/textAppearanceMedium"/>

                <TextView
                    android:id="@+id/tvCostoTotalLVenta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300Bs." 
                    android:textSize="@dimen/letter_tablet_small"
		            android:textAppearance="?android:attr/textAppearanceMedium"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
