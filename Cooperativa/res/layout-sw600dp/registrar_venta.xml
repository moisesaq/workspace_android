<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollViewParent"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal" 
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de venta"
                android:textStyle="bold"
		    	android:textSize="@dimen/letter_tablet_small"
				android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/spinnerTipoVenta"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textSize="@dimen/letter_tablet_normal"
				android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|center_horizontal">
        
            <ImageView
                android:id="@+id/ivImagenClienteVenta"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/custom_imageview"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_person_white_48dp" 
                android:visibility="gone"/>
            
            <LinearLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            android:gravity="center_vertical"
	            android:layout_marginLeft="5dp">
	            
	            <AutoCompleteTextView
		            android:id="@+id/actvCIClienteVenta"
		            android:layout_width="300dp"
		            android:layout_height="wrap_content"
		            android:hint="CI del Cliente"
		            android:inputType="number"
		            android:maxLength="10"
		            android:textSize="@dimen/letter_tablet_normal"
					android:textAppearance="?android:attr/textAppearanceMedium" />
	            
	            <TextView 
	                android:id="@+id/tvNombreClienteVenta"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Nombre: Silvia Vargas"
	                android:textSize="@dimen/letter_tablet_small"
					android:textAppearance="?android:attr/textAppearanceMedium"
	                android:visibility="gone"/>
        	</LinearLayout>
        </LinearLayout>
       
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha y Hora de venta"
                android:textStyle="bold"
                android:textSize="@dimen/letter_tablet_small"
				android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tvFechaVenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Martes, 16 de junio 2015"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/letter_tablet_normal"
				android:textAppearance="?android:attr/textAppearanceMedium" />
            
            <TextView
                android:id="@+id/tvHoraVenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hrs. 15:45:23"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/letter_tablet_normal"
				android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyVistaPersonalDeEntregaVenta"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:visibility="gone">
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:orientation="horizontal"
                android:gravity="center_vertical">
	            
                <EditText
	                android:id="@+id/etDireccionEntregaVenta"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="10"
	                android:hint="DirecciÃ³n de entrega"
	                android:textSize="@dimen/letter_tablet_small"
					android:textAppearance="?android:attr/textAppearanceMedium"
	                android:ems="10" >
	            </EditText>
	            
                <ImageView 
                    android:id="@+id/ivSeeGoogleMapsVenta"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:src="@drawable/ic_location_on_black_48dp" 
	                android:background="@drawable/custom_view_button"/>
                
            </LinearLayout>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal encargado de la entrega:"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textSize="@dimen/letter_tablet_small"
				android:textAppearance="?android:attr/textAppearanceMedium" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal"
                android:layout_marginTop="5dp" >

                <ImageView
                    android:id="@+id/ivSeleccionarPersonalVenta"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/custom_imageview"
                    android:scaleType="centerCrop"
                    android:padding="7dp"
                    android:src="@drawable/ic_mode_edit_white_24dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tvCIPersonalVenta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CI: 5544332"
                        android:textSize="@dimen/letter_tablet_normal"
						android:textAppearance="?android:attr/textAppearanceMedium" 
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tvNombrePersonalVenta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seleccione personal"
                        android:textSize="@dimen/letter_tablet_normal"
						android:textAppearance="?android:attr/textAppearanceMedium" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyVistaMaqVenta"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal"
                android:layout_marginTop="5dp" 
                android:visibility="gone">

                <ImageView
                    android:id="@+id/ivImagenMaqVenta"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:background="@drawable/custom_imageview"
                    android:scaleType="centerCrop"
                    android:padding="25dp"
                    android:src="@drawable/ic_local_shipping_white_48dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tvPlacaMaqVenta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Placa: 7866VAR"
                        android:textSize="@dimen/letter_tablet_small"
						android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/tvCapacidadMaqVenta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Capacidad: 4 cubos"
                        android:textSize="@dimen/letter_tablet_small"
						android:textAppearance="?android:attr/textAppearanceMedium" />
                </LinearLayout>
            </LinearLayout>
        
        </LinearLayout>
    
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="right|center_vertical">
                       
            <Button
                android:id="@+id/btnSeleccionarProdVenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agregar productos"
                android:textColor="@android:color/black"
                android:drawableRight="@drawable/ic_shopping_cart_white_24dp"
                android:background="@drawable/custom_view_button"
                android:padding="3dp"
                android:textSize="@dimen/letter_tablet_small"
				android:textAppearance="?android:attr/textAppearanceMedium" />
            
        </LinearLayout>
        
        <FrameLayout 
            android:layout_width="fill_parent"
            android:layout_height="320dp"
            android:background="@drawable/custom_view_layout"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            
            <TextView 
                android:id="@+id/tvAvisoListaProdVenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:text="Lista vacia, agregue productos"
                android:textSize="@dimen/letter_tablet_small"
				android:textAppearance="?android:attr/textAppearanceMedium"/>
            
            <ListView
	            android:id="@+id/lvListaProdVenta" 
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:scrollbars="vertical"
	            android:visibility="invisible">
	        </ListView>
        </FrameLayout>
        
        <LinearLayout
            android:id="@+id/lyVistaCostoTotalVenta"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center_vertical|center_horizontal"
            android:visibility="gone">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Costo Total a pagar: "
                android:textStyle="bold"
                android:textSize="@dimen/letter_tablet_small"
				android:textAppearance="?android:attr/textAppearanceMedium" />
            
            <TextView
                android:id="@+id/tvCostoTotalVenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500.0 Bs."
                android:textSize="@dimen/letter_tablet_normal"
				android:textAppearance="?android:attr/textAppearanceMedium" />
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nota: "
                android:textStyle="bold"
                android:textSize="@dimen/letter_tablet_small"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
            <EditText
                android:id="@+id/etNotaVenta"
                android:layout_width="fill_parent"
                android:layout_height="90dp"
                android:hint="Escriba nota aqui"
                android:gravity="left|top"
                android:maxLength="250"
                android:textSize="@dimen/letter_tablet_small"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp">
            
            <Button 
	            android:id="@+id/btnCancelarVenta"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/cancelar_venta"
	            android:textColor="@android:color/black"
            	android:background="@drawable/custom_view_button"
	            android:layout_marginRight="3dp"
	            android:padding="15dp"
	            android:textSize="@dimen/letter_tablet_normal"
				android:textAppearance="?android:attr/textAppearanceMedium"/>
            
            <Button 
	            android:id="@+id/btnRegistrarVenta"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/registrar_venta"
	            android:textColor="@android:color/black"
           		android:background="@drawable/custom_view_button"
	            android:padding="15dp"
	            android:textSize="@dimen/letter_tablet_normal"
				android:textAppearance="?android:attr/textAppearanceMedium"/>
            
        </LinearLayout>
        
    </LinearLayout>
</ScrollView>
