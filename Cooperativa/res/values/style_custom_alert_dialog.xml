<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="Theme_Holo_Dialog_Alert" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle_Holo</item>
    </style>
    
    <style name="DialogWindowTitle_Holo">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.DialogWindowTitle</item>
    </style>
    
    <style name="Theme_CAT_Alert_Dialog" parent="@style/Theme_Holo_Dialog_Alert">
        <item name="android:windowTitleStyle">@style/DialogWindowTitle.CAT</item>
        <item name="android:borderlessButtonStyle">@style/Widget.CAT.Button.Borderless</item>
        <item name="android:buttonBarStyle">@style/CAT.ButtonBar.AlertDialog</item>
    </style>
    
    <style name="DialogWindowTitle.CAT" parent="@style/DialogWindowTitle_Holo">
        <item name="android:textAppearance">@style/TextAppearance.CAT.DialogWindowTitle</item>
    </style>
    
    <style name="TextAppearance.CAT.DialogWindowTitle" parent="@android:style/TextAppearance.Holo.DialogWindowTitle">
    	<item name="android:textColor">@android:color/background_dark</item>
    	<!--
    	<item name="android:textStyle">bold</item> 
    	 -->
    </style>
    
    <style name="Widget.CAT.Button.Borderless" parent="@android:style/Widget.Holo.Button.Borderless">
        <item name="android:textColor">@android:color/black</item>
    </style>
    
    <style name="TextAppearance.CAT.DialogButton" parent="@android:style/TextAppearance.Holo.Small.Inverse"></style>
    
    <style name="CAT.ButtonBar.AlertDialog" parent="@android:style/Holo.ButtonBar.AlertDialog">
        <item name="android:background">@drawable/custom_view_button</item>
    </style>
    
</resources>
