        <item name="android:buttonBarButtonStyle">@drawable/custom_view_button</item>
        <item name="android:button">@drawable/custom_view_button</item>
        <item name="android:divider">#ffff00</item>
        <item name="android:textAppearanceMedium">@android:style/TextAppearance.Medium</item>
        <item name="android:borderlessButtonStyle">@android:style/ButtonBar</item> 
        -->
        
    </style>
    
    <style name="TitleStyle">
        <item name="android:textColor">#ffff00</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">18dp</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

</resources>
