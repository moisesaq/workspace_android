<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        android:padding="5dp">
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <ImageView 
                android:id="@+id/ivImagenNuevoPersonal"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_employees_128"
                android:background="@drawable/custom_imageview"/>
            
            <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            android:layout_marginLeft="2dp">
	            
                <EditText 
                    android:id="@+id/etCINuevoPersonal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Carnet Ident."
                	android:inputType="number" 
                    android:maxLength="8"
                    android:drawableRight="@drawable/ic_no_value_24">
                	<requestFocus />  
                </EditText>
                
                <EditText 
                    android:id="@+id/etNombreNuevoPersonal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre"
                    android:layout_weight="1"
              		android:inputType="textCapWords"
              		android:layout_marginTop="2dp"
                    android:maxLength="20">
                </EditText>
                
	        </LinearLayout>
            
        </LinearLayout>

        <EditText
            android:id="@+id/etApellidoNuevoPersonal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Apellido"
            android:inputType="textCapWords"
            android:layout_marginTop="2dp"
            android:maxLength="20"/>

        <EditText
            android:id="@+id/etDireccionNuevoPersonal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DirecciÃ³n"
            android:inputType="textCapSentences"
            android:maxLength="35"
            android:layout_marginTop="2dp" />

        <EditText
            android:id="@+id/etTelfNuevoPersonal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telf. o Cel."
            android:layout_marginTop="2dp"
            android:inputType="phone" 
            android:maxLength="10"/>

        <EditText
            android:id="@+id/etEmailNuevoPersonal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:layout_marginTop="2dp"
            android:inputType="textEmailAddress" 
            android:maxLength="35"/>

   
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_marginTop="2dp"
            android:orientation="vertical">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de nacimiento"
                android:textAppearance="?android:attr/textAppearanceSmall" />
            
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical|center">
	            
                <TextView
	                android:id="@+id/tvFechaNanNuevoPersonal"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Sin especificar" />
	
	            <ImageView
	                android:id="@+id/ivFechaNacNuevoPersonal"
	                android:layout_width="30dp"
	                android:layout_height="30dp"
	                android:layout_marginLeft="5dp"
	                android:src="@drawable/ic_event_white_24dp" 
	                android:background="@drawable/custom_view_button"/>
	            
	        </LinearLayout>
	        
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_marginTop="2dp"
            android:orientation="vertical">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de ingreso"
                android:textAppearance="?android:attr/textAppearanceSmall" />
            
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical|center">
	            
                <TextView
	                android:id="@+id/tvFechaIngresoNuevoPersonal"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Fecha de ingreso" />
	
	            <ImageView
	                android:id="@+id/ivFechaIngresoNuevoPersonal"
	                android:layout_width="30dp"
	                android:layout_height="30dp"
	                android:layout_marginLeft="5dp"
	                android:src="@drawable/ic_event_white_24dp" 
	                android:background="@drawable/custom_view_button"/>
	            
	        </LinearLayout>
	        
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:padding="3dp"
            android:layout_marginTop="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cargo"
                android:textAppearance="?android:attr/textAppearanceSmall" />
            
            <LinearLayout 
                android:id="@+id/lyVistaCargoNuevoPersonal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
            	android:gravity="center_vertical|center"
            	android:visibility="gone">
            	 
                <TextView
	                android:id="@+id/tvOcupacionCargoNuevoPersonal"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Fecha de nacimiento" />
	                
	            <ImageView
	                android:id="@+id/ivEditarCargoNuevoPersonal"
	                android:layout_width="30dp"
	                android:layout_height="30dp"
	                android:layout_marginLeft="5dp"
	                android:src="@drawable/ic_mode_edit_white_24dp" 
	                android:background="@drawable/custom_view_button"/>
                
            </LinearLayout>
            
            <Spinner
	            android:id="@+id/spCargoNuevoPersonal"
	            android:layout_width="match_parent"
	            android:layout_height="35dp" 
	            android:gravity="center_horizontal|center"/>

        </LinearLayout>
        
        <CheckBox android:id="@+id/cbMaquinariaNuevoPersonal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maquinaria"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        <LinearLayout
            android:id="@+id/lyVistaMaqNuevoPersonal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_horizontal|center"
            android:visibility="gone">

            <ImageView
                android:id="@+id/ivMaquinariaNuevoPersonal"
                android:layout_width="100dp"
                android:layout_height="50dp"
         		android:scaleType="centerCrop"
         		android:padding="20dp"
                android:src="@drawable/ic_local_shipping_white_48dp" 
                android:background="@drawable/custom_imageview"/>
            
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp">
                
                <TextView
	                android:id="@+id/tvPlacaMaqNuevoPersonal"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Seleccione maquinaria"/>
                
                <TextView
	                android:id="@+id/tvDescripcionMaqNuevoPersonal"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Descripcion" 
	                android:textSize="@dimen/letter_small"
	                android:visibility="gone"/>
                
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnAceptarNuevoPersonal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/aceptar" 
            android:layout_marginTop="2dp"
            android:textColor="@android:color/black"
            android:background="@drawable/custom_view_button"/>

    </LinearLayout>

</ScrollView>
