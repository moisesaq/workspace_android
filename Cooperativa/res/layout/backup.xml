<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/FrameLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal">
        
        <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" 
	        android:gravity="center_vertical"
	        android:layout_marginBottom="10dp">
	        
	        <ProgressBar
	            android:id="@+id/pbBackup"
	            style="?android:attr/progressBarStyleLarge"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" 
	            android:visibility="gone"/>
	
	        <TextView
	            android:id="@+id/tvMessageBackup"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Listo para el Backup"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
	    </LinearLayout>
	    
	    <Button
	        android:id="@+id/btnBackup"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/custom_view_button"
	        android:drawableRight="@drawable/ic_backup_32"
	        android:padding="10dp"
	        android:text="BACKUP  " 
	        android:textStyle="bold"
	        android:textColor="@android:color/white"
	        android:textSize="@dimen/letter_normal"/>
	    
   	</LinearLayout>

</FrameLayout>
