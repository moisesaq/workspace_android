<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:layout_marginLeft="5dp">

        <ImageView
            android:id="@+id/ivImageLCargo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_ocupation_128" 
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:background="@drawable/custom_imageview"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp">
            
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Ocupacion: " 
			        android:textStyle="bold"
	                android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"/>
                
                <TextView
	                android:id="@+id/tvOcupacionLCargo"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Administrador" 
	                android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"/>
                
            </LinearLayout>
            
             <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
               <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="Salario: " 
			        android:textStyle="bold"
			        android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"/>
                
                <TextView
	                android:id="@+id/tvSalarioLCargo"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="1200 Bs." 
	                android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"/>
                 
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp">
        
        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Descripcion: " 
	        android:textStyle="bold"
	        android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"/>
        
        <TextView
	        android:id="@+id/tvDescripcionLCargo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Hola mundo android" 
	        android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"/>
                
    </LinearLayout>
    
    
    
</LinearLayout>
