<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivImageClienteLVenta"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/custom_imageview"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_client_128"
            android:padding="3dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/letter_small"
                    android:textStyle="bold"
                    android:text="Nombre: " />
                
                <TextView
                    android:id="@+id/tvNombreClienteLVenta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/letter_normal"
                    android:text="Silvia Vargas V." />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/letter_small"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:text="CI: " />
                
                <TextView
                    android:id="@+id/tvCIClienteLVenta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/letter_normal"
                    android:text="5544332" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/letter_small"
                    android:textStyle="bold"                
                    android:text="Fecha venta: " />

                <TextView
                    android:id="@+id/tvFechaVentaLVenta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/letter_normal"                  
                    android:text="17/06/2015" />
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/letter_small"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:text="Costo total:" />

                <TextView
                    android:id="@+id/tvCostoTotalLVenta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/letter_normal"
                    android:text="300Bs." />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
