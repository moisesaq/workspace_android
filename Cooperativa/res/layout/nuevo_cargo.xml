<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="3dp">

    <EditText
        android:id="@+id/etOcupacionNuevoCargo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre cargo"
        android:layout_marginTop="2dp"
        android:inputType="textCapCharacters"
        android:maxLength="35">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/etSalarioNuevoCargo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Salario"
        android:layout_marginTop="2dp"
        android:inputType="numberDecimal" 
        android:maxLength="10"/>

    <EditText
        android:id="@+id/etDescripcionNuevoCargo"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="Descripcion"
        android:layout_marginTop="2dp"
        android:gravity="left|top"
        android:maxLines="4"
        android:ems="10" 
        android:inputType="textCapSentences"
        android:maxLength="120"/>

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">
        
        <Button
	        android:id="@+id/btnCancelarNuevoCargo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/cancelar"
	        android:textColor="@android:color/black"
	        android:background="@drawable/custom_view_button"
	        android:layout_margin="2dp"
	        android:textAppearance="?android:attr/textAppearanceSmall"/>
	    
	    <Button
	        android:id="@+id/btnAceptarNuevoCargo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/aceptar"
	        android:textColor="@android:color/black" 
	        android:background="@drawable/custom_view_button"
	        android:layout_margin="2dp"
	        android:textAppearance="?android:attr/textAppearanceSmall"/>
        
    </LinearLayout>
</LinearLayout>
