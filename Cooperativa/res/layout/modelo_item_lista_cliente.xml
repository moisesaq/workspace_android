<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:layout_marginLeft="10dp">

        <ImageView
            android:id="@+id/ivImageClienteLCliente"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_client_128"
            android:padding="5dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="@drawable/custom_imageview"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            android:gravity="center_vertical"
            android:layout_marginLeft="7dp">
            
            <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:layout_marginLeft="3dp">
		        
		        <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="CI/NIT: "
			        android:textStyle="bold"
			        android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"/>
		        
		      	<TextView
	                android:id="@+id/tvCILCliente"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="5684200"
	                android:textAppearance="?android:attr/textAppearanceSmallPopupMenu" />
		                
		    </LinearLayout>
		    
            <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:layout_marginLeft="3dp">
		        
		        <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="Nombre: "
			        android:textStyle="bold"
			        android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"/>
		        
		      	<TextView
	                android:id="@+id/tvNombreLCliente"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Silvia Eugenia"
	                android:textAppearance="?android:attr/textAppearanceSmallPopupMenu" />
		                
		    </LinearLayout>

            <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:layout_marginLeft="3dp">
		        
		        <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="Apellido: "
			        android:textStyle="bold"
			        android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"/>
		        
		      	<TextView
	                android:id="@+id/tvApellidoLCliente"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Vargas Vera"
	                android:textAppearance="?android:attr/textAppearanceSmallPopupMenu" />
		                
		    </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>