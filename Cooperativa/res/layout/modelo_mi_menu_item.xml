<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/imageMiMenu"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_ocupation_128" 
        android:layout_gravity="left"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:background="@drawable/custom_imageview"/>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical">
        
        <TextView
	        android:id="@+id/titleMiMenu"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Opciones"
	        android:textStyle="bold"
	        android:textColor="@android:color/background_dark"
	        android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"/>
        
        <TextView
	        android:id="@+id/descriptionMiMenu"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Descripcion"
	        android:textSize="@dimen/letter_small"
	        android:textColor="@color/GRIS_FUERTE"
	        android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"/>
        
    </LinearLayout>

    

</LinearLayout>
