<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.silvia.cooperativa"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_icon_duraznillo"
        android:label="@string/app_name"
        android:theme="@style/Theme.Caterpillar"
        android:name="com.silvia.cooperativa.MyApplication">
        <activity
            android:name="com.silvia.cooperativa.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="screenSize|orientation" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.silvia.cooperativa.SegudoActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" 
            android:configChanges="screenSize|orientation">
            <meta-data 
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.silvia.cooperativa.MainActivity"/>
            <intent-filter>
                <action android:name="android.intent.action.ACTIVITYDOS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.silvia.cooperativa.TercerActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="screenSize|orientation" >
            <meta-data 
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.silvia.cooperativa.MainActivity"/>
        </activity>
    </application>

</manifest>
