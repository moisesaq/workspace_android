<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="10dp">

    <FrameLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        
        <ImageView
        android:id="@+id/ivVistaImagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_car" />

        <ProgressBar
            android:id="@+id/pbEspera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_gravity="center"/>
        
    </FrameLayout>
    

    <EditText
        android:id="@+id/etBusquedaIC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" 
        android:hint="Nombre imagen">

        <requestFocus />
    </EditText>

    <CheckBox
        android:id="@+id/cboxServidorIC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar en servidor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btnBuscarImagenIC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buscar" />

        <Button
            android:id="@+id/btnGuardarImagenIC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar" />

        <Button
            android:id="@+id/btnSubirImagenIC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subir" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capturar imagen con camera" 
        android:paddingTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:paddingTop="5dp">

        <Button
            android:id="@+id/btnCapturarImagenIC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capturar" />

        <Button
            android:id="@+id/btnCompartirImagenIC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Compartir" />

    </LinearLayout>

</LinearLayout>
