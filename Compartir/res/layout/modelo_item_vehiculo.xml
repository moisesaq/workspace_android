<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/ivImageVehiculoLV"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_car"
            android:background="@drawable/custom_imageview" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="3dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvPlacaLV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placa: 123moi" />

            <TextView
                android:id="@+id/tvMarcaLV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marca: KIA" />

            <TextView
                android:id="@+id/tvColorLV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="Color: Negro" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvPathImageVehiculoLV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Path: Scard/Images/test.jpg"
        android:textSize="11dp" 
        android:visibility="gone"/>

</LinearLayout>
