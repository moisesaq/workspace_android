<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/lyViewMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:background="@drawable/bubble_issuing">

        <LinearLayout
            android:id="@+id/lyViewAudioMessage"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:visibility="visible"
            android:gravity="center_vertical">

            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical">

                <ImageButton
                    android:id="@+id/ibtnPlay"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_chat_play"
                    android:scaleType="centerCrop"
                    android:background="@drawable/button_custom"
                    android:visibility="visible"
                    android:clickable="true"/>

                <ImageButton
                    android:id="@+id/ibtnPause"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_chat_pause"
                    android:scaleType="centerCrop"
                    android:background="@drawable/button_custom"
                    android:visibility="gone"
                    android:clickable="true"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <SeekBar
                    android:id="@+id/sbSound"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvDurationSound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="1:12"
                    android:textSize="9dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/black"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/ivDriverImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/anonymous"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_gravity="right"
            android:src="@drawable/anonymous"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Testing hola test test"
            android:textColor="@android:color/black"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="12:57"
                android:layout_marginRight="5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_chat_sending"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_chat_sent"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_chat_delivered"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_chat_read"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
